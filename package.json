{
  "name": "plebbit-protocol-test",
  "private": true,
  "license": "GPL-2.0",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "test": "vitest run --config vitest.config.js",
    "test:watch": "vitest --config vitest.config.js",
    "test:browser": "yarn test:browser:chromium && yarn test:browser:firefox",
    "test:browser:chromium": "cross-env VITEST_BROWSER=chromium vitest --run --browser --config config/vitest.browser.config.js",
    "test:browser:firefox": "cross-env VITEST_BROWSER=firefox vitest --run --browser --config config/vitest.browser.config.js",
    "test:server": "rm -rf .plebbit/ && node --es-module-specifier-resolution=node test/test-server",
    "test:server:wait-on": "wait-on http://localhost:59281 --timeout 120000",
    "prettier": "prettier {src,test,config}/**/*.{cjs,js,jsx,ts,tsx} --config config/prettier.config.js --write"
  },
  "dependencies": {
    "@plebbit/plebbit-js": "file:../plebbit-js",
    "cborg": "1.9.6",
    "eslint": "8.4.1",
    "husky": "4.3.8",
    "kubo": "0.39.0",
    "lint-staged": "12.3.8",
    "prettier": "3.2.5",
    "tempy": "1.0.1",
    "wait-on": "6.0.1"
  },
  "lint-staged": {
    "{src,test,config}/**/*.{cjs,js,jsx,ts,tsx}": [
      "prettier --config config/prettier.config.js --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@vitest/browser": "3.2.4",
    "cross-env": "7.0.3",
    "playwright": "1.53.1",
    "vite": "7.1.10",
    "vitest": "3.2.4"
  }
}
